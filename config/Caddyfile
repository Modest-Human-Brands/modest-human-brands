:8080 {
  root * /srv/static

  header {
    Access-Control-Allow-Origin *
    Access-Control-Allow-Methods "GET, OPTIONS"
  }

  @m3u8 path *.m3u8
  header @m3u8 Cache-Control no-cache

  @segments path *.ts *.m4s
  header @segments Cache-Control "public, max-age=31536000"

  @mp4 path *.mp4
  header @mp4 Cache-Control "public, max-age=31536000"

  file_server
}