{
  "name": "modest-human-brands",
  "version": "0.1.0",
  "description": "Autonomous Next-Gen Media Operating System",
  "author": "Shirsendu Bairagi <shirsendu2001@gmail.com>",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Modest-Human-Brands/modest-human-brands.git"
  },
  "type": "module",
  "private": true,
  "engines": {
    "node": "^20.15.0 || ^22.11.0",
    "pnpm": "^9.15.0 || ^10.2.0",
    "bun": "^1.2.9"
  },
  "packageManager": "bun@1.3.9",
  "scripts": {
    "prepare": "husky || true",
    "postinstall": "nuxt prepare",
    "dev": "nuxt dev --host",
    "detect": "gitleaks git --verbose",
    "lint": "eslint . --fix",
    "format": "prettier . --write",
    "test:load": "k6 run tests/load.test.ts",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node --env-file=.env.prod .output/server/index.mjs",
    "clean": "nuxt cleanup && (cd src-tauri && cargo clean)",
    "docker:build": "docker build --build-arg VERSION=dev --build-arg BUILD_TIME=now -t modest-human-brands:dev .",
    "docker:start": "docker run --detach --name modest-human-brands-dev --env-file .env.prod -p 4000:3000 modest-human-brands:dev",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:dev:mobile": "tauri android dev",
    "tauri:build:mobile": "tauri android build"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "@notionhq/client": "^5.9.0",
    "@nuxt/eslint": "^1.15.1",
    "@nuxt/fonts": "^0.13.0",
    "@nuxt/icon": "^2.2.1",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "^0.13.2",
    "@nuxt/test-utils": "^4.0.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@nuxtjs/i18n": "^10.2.3",
    "@nuxtjs/seo": "^3.4.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@regle/nuxt": "^1.18.3",
    "@tauri-apps/api": "^2.10.1",
    "@types/web-push": "^3.6.4",
    "@unhead/vue": "^2.1.4",
    "@vite-pwa/nuxt": "^1.1.1",
    "@vue-email/components": "^0.0.21",
    "@vue-email/render": "^0.0.9",
    "@vueuse/core": "^14.2.1",
    "@vueuse/nuxt": "^14.2.1",
    "nuxt": "^4.3.1",
    "nuxt-auth-utils": "^0.5.28",
    "pinia": "^3.0.4",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2",
    "web-push": "^3.6.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@tauri-apps/cli": "^2.10.0",
    "@types/k6": "^1.5.0",
    "@types/node": "^25.2.2",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^10.0.0",
    "happy-dom": "^20.6.0",
    "husky": "^9.1.7",
    "playwright-core": "^1.58.2",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
